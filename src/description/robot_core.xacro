<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

<xacro:include filename="inertial_macros.xacro" />


<material name="white">
    <color rgba="1 1 1 1"/>
</material>

<material name="orange">
    <color rgba="1 0.3 0.1 1"/>
</material>

<material name="blue">
    <color rgba="0.2 0.2 1 1"/>
</material>

<material name="black">
    <color rgba="0 0 0 1"/>
</material>




<link name="base_link">
</link>

<joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="-0.15 0 0"/>
</joint>

<link name="chassis">
    <visual>
        <origin xyz="0.15 0 0.045" rpy="0 0 0"/>
        <geometry>
            <box size="0.3 0.2 0.09"/>
        </geometry>
        <material name="white"/>
    </visual>
    <collision>
        <origin xyz="0.15 0 0.045" rpy="0 0 0"/>
        <geometry>
            <box size="0.3 0.2 0.09"/>
        </geometry>
    </collision>
    <xacro:inertial_box mass="0.5" x="0.3" y="0.2" z="0.09">
        <origin xyz="0.15 0 0.045" rpy="0 0 0"/>
    </xacro:inertial_box>
</link>



<!-- REAR LEFT WHEEL -->
<joint name="front_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="-0.13 0.125 0.02" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
</joint>

<link name="front_left_wheel">
    <visual>
        <geometry>
            <!-- <mesh filename="package://articubot_one/meshes/Right_wheel.stl" scale="1 1 1"/> -->
            <cylinder length="0.04" radius="0.05" />
        </geometry>
        <material name="blue"/>
    </visual>
    <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.05">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
</link>

<!-- REAR RIGHT WHEEL -->
<joint name="front_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="-0.13 -0.125 0.02" rpy="${pi/2} 0 0"/>
    <axis xyz="0 0 -1"/>
</joint>

<link name="front_right_wheel">
    <visual>
        <geometry>
            <cylinder length="0.04" radius="0.05" />
        </geometry>
        <material name="blue"/>
    </visual>
    <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.05">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
</link>




<!-- FRONT LEFT WHEEL -->
<joint name="rear_left_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="0.13 0.125 0.02" rpy="-${pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
</joint>

<link name="rear_left_wheel">
    <visual>
        <geometry>
            <cylinder length="0.04" radius="0.05" />
        </geometry>
        <material name="blue"/>
    </visual>
    <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.05">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
</link>

<!-- FRONT RIGHT WHEEL -->
<joint name="rear_right_wheel_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="0.13 -0.125 0.02" rpy="${pi/2} 0 0"/>
    <axis xyz="0 0 -1"/>
</joint>

<link name="rear_right_wheel">
    <visual>
        <geometry>
            <cylinder length="0.04" radius="0.05" />
        </geometry>
        <material name="blue"/>
    </visual>
    <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.05">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
</link>






<!-- ROBOTIC ARM -->

<!-- ARM BASE -->
<joint name="arm_base_link" type="fixed">
    <parent link="base_link"/>
    <child link="arm_base"/>
    <origin xyz="0.05 0 0.09"/>
</joint>

<link name="arm_base">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <box size="0.12 0.12 0.001"/>
        </geometry>
        <material name="blue"/>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <box size="0.12 0.12 0.001"/>
        </geometry>
    </collision>
    <xacro:inertial_box mass="0.5" x="0.12" y="0.12" z="0.005">
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
</link>


<!-- ARM JOINT1 -->
<joint name="arm_joint_1" type="continuous">
    <parent link="arm_base"/>
    <child link="arm_link_1"/>
    <origin xyz="0 0 0.095" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
</joint>

<link name="arm_link_1">
    <visual>
    <origin xyz="0 0 -0.0475" rpy="0 0 0"/>
        <geometry>
            <cylinder length="0.095" radius="0.05" />
        </geometry>
        <material name="orange"/>
    </visual>
    <collision>
    <origin xyz="0 0 -0.0275" rpy="0 0 0"/>
        <geometry>
            <cylinder length="0.055" radius="0.05" />
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.055" radius="0.05">
    <origin xyz="0 0 -0.0275" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
</link>




<!-- ARM JOINT2 -->
<joint name="arm_joint_2" type="revolute">
    <parent link="arm_link_1"/>
    <child link="arm_link_2"/>
    <origin xyz="0 0 0" rpy="${pi/2} 0 0"/>
    <limit effort="30" velocity="1.0" lower="${pi/3}" upper="-${pi/3}"/>
    <axis xyz="0 0 -1"/>
</joint>

<link name="arm_link_2">
    <visual>
    <origin xyz="0 0.07 0" rpy="-${pi/2} 0 0"/>
        <geometry>
            <cylinder length="0.14" radius="0.04" />
        </geometry>
        <material name="blue"/>
    </visual>
    <collision>
    <origin xyz="0 0.07 0" rpy="-${pi/2} 0 0"/>
        <geometry>
            <cylinder length="0.14" radius="0.04" />
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.14" radius="0.04">
    <origin xyz="0 0.07 0" rpy="-${pi/2} 0 0"/>
    </xacro:inertial_cylinder>
</link>



<!-- ARM JOINT3 -->
<joint name="arm_joint_3" type="revolute">
    <parent link="arm_link_2"/>
    <child link="arm_link_3"/>
    <origin xyz="0 0.14 0" rpy="0 0 0"/>
    <limit effort="30" velocity="1.0" lower="${pi/3}" upper="-${pi/3}"/>
    <axis xyz="0 0 -1"/>
</joint>

<link name="arm_link_3">
    <visual>
    <origin xyz="0 0.06 0" rpy="-${pi/2} 0 0"/>
        <geometry>
            <cylinder length="0.12" radius="0.035" />
        </geometry>
        <material name="orange"/>
    </visual>
    <collision>
    <origin xyz="0 0.06 0" rpy="-${pi/2} 0 0"/>
        <geometry>
            <cylinder length="0.12" radius="0.035" />
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.12" radius="0.035">
    <origin xyz="0 0.05 0" rpy="-${pi/2} 0 0"/>
    </xacro:inertial_cylinder>
</link>

<!-- ARM JOINT4 -->
<joint name="arm_joint_4" type="revolute">
    <parent link="arm_link_3"/>
    <child link="arm_link_4"/>
    <origin xyz="0 0.12 0" rpy="-${pi/2} 0 0"/>
    <limit effort="30" velocity="1.0" lower="${pi/3}" upper="-${pi/3}"/>
    <axis xyz="0 0 -1"/>
</joint>

<link name="arm_link_4">
    <visual>
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
        <geometry>
            <cylinder length="0.08" radius="0.03" />
        </geometry>
        <material name="blue"/>
    </visual>
    <collision>
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
        <geometry>
            <cylinder length="0.08" radius="0.03" />
        </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.1" length="0.08" radius="0.03">
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
</link>


<!-- TCP -->
<joint name="TCP_joint" type="fixed">
    <parent link="arm_link_4"/>
    <child link="TCP_link"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
</joint>

<link name="TCP_link">
</link>


</robot>